<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorSplashSecondBackground"
    tools:context=".SplashScreenSecondActivity">

    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="0dp"
        android:id="@+id/anim_splash_second"
        android:layout_above="@+id/textsplashsecond"
        android:layout_height="400dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/mlogo_splash_anim" />
<!--    <ImageView-->
<!--        android:id="@+id/imagesplashsecond"-->
<!--        android:layout_width="300dp"-->
<!--        android:layout_height="200dp"-->
<!--        android:src="@drawable/splashscreen"-->
<!--        android:layout_marginTop="100dp"-->
<!--        android:layout_centerHorizontal="true"-->
<!--        android:layout_marginBottom="50dp"-->
<!--        android:contentDescription="@string/splash_image_second_description" />-->

    <TextView
        android:id="@+id/textsplashsecond"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/anim_splash_second"
        android:text="@string/splash_text_second"
        android:textColor="@color/colorSplashSecondText"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/anim_splash_second" />


</androidx.constraintlayout.widget.ConstraintLayout>